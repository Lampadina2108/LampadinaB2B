{
  "name": "lampadina-b2b-backend",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "build:strict": "npm run typecheck && npm run build",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "pm2 start ecosystem.config.js --only lampadina-backend",
    "restart": "pm2 reload ecosystem.config.js --only lampadina-backend",
    "status": "pm2 status lampadina-backend",
    "logs": "pm2 logs lampadina-backend --lines 100",
    "deploy": "npm ci && npm run build && pm2 reload ecosystem.config.js --only lampadina-backend && pm2 save"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "nodemailer": "^7.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
